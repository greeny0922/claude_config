{
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Edit",
      "Write",
      "WebFetch",
      "WebSearch",
      "NotebookEdit",
      "Task",
      "mcp__brave-search",
      "mcp__linear-server",
      "mcp__github",
      "mcp__memory",
      "mcp__mermaid"
    ],
    "deny": []
  },
  "enabledPlugins": {
    "pyright-lsp@claude-plugins-official": true,
    "atlassian@claude-plugins-official": true,
    "linear@claude-plugins-official": true,
    "github@claude-plugins-official": false
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$HOME\"/.claude/hooks/check-dangerous-command.sh"
          }
        ]
      }
    ]
  }
}
